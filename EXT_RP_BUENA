    <script>
        // Creamos el efecto de n√∫meros binarios en el fondo
        document.addEventListener('DOMContentLoaded', function() {
            const binaryBg = document.getElementById('binaryBackground');
            const width = Math.ceil(window.innerWidth / 20); // Ancho en columnas
            const height = Math.ceil(window.innerHeight / 30); // Altura en filas
            
            let binaryText = '';
            
            for (let i = 0; i < height; i++) {
                let line = '';
                for (let j = 0; j < width; j++) {
                    line += Math.random() > 0.5 ? '1' : '0';
                    line += ' ';
                }
                binaryText += line + '\n';
            }
            
            binaryBg.textContent = binaryText;

            // Animaci√≥n para que los n√∫meros cambien peri√≥dicamente
            setInterval(() => {
                let newText = binaryText.split('\n').map(line => {
                    return line.split('').map(char => {
                        if (Math.random() > 0.98) {
                            return char === '1' ? '0' : '1';
                        }
                        return char;
                    }).join('');
                }).join('\n');
                
                binaryBg.textContent = newText;
                binaryText = newText;
            }, 100);
        });
    </script>
